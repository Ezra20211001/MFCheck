<Window x:Class="MFCheck.Form.WindNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MFCheck.Form"
        mc:Ignorable="d"
        Title="项目属性" Height="500" Width="880" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="defLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>

        <Style x:Key="defTextBox" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="defGroupBox" TargetType="GroupBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="750"/>
        </Style>

        <Style x:Key="defButton" TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="19"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Label x:Name="label" Content="项目名称"  Margin="57,15,0,0" Style="{StaticResource defLabel}" />
        <TextBox x:Name="textBox" Height="23" Width="120" Margin="117,16,0,0" Style="{StaticResource defTextBox}"/>

        <Label x:Name="label1" Content="项目描述" Margin="283,15,0,0" Style="{StaticResource defLabel}"/>
        <TextBox x:Name="textBox1" Height="23" Width="462" Margin="345,16,0,0" Style="{StaticResource defTextBox}"/>


        <GroupBox x:Name="groupBox" Style="{StaticResource defGroupBox}" Header="属性列表" Height="200" Margin="62,53,464.6,0" Width="340"/>
        <GroupBox x:Name="groupBox1" Style="{StaticResource defGroupBox}" Header="编辑属性" Height="200" Margin="465,53,61.6,0" Width="340"/>

        <GroupBox x:Name="groupMod" Header="模型命名" Margin="0,262,0,0" Style="{StaticResource defGroupBox}">
        </GroupBox>

        <GroupBox x:Name="groupFile" Header="文件命名" Margin="0,341,0,0" Style="{StaticResource defGroupBox}">
        </GroupBox>

        <Button x:Name="btnOK" Style="{StaticResource defButton}" Content="确定" Margin="0,430,0,0" Click="BtnOK_Click"/>
        <Button x:Name="btnAddProp" Style="{StaticResource defButton}" Content="添加" Margin="0,130,0,0" Click="BtnAddProp_Click"/>
        <Button x:Name="butDelProp" Style="{StaticResource defButton}" Content="删除" Margin="0,180,0,0" Click="ButDelProp_Click"/>

    </Grid>
</Window>
