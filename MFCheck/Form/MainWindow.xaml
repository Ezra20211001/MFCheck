<Window x:Class="MFCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MFCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid Height="20" VerticalAlignment="Top">
			<Grid.Background>
				<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
			</Grid.Background>
			<WrapPanel>
				<Menu>
					<MenuItem x:Name="new" Header="新建" Click="New_Click" />
				</Menu>
				<Menu>
					<MenuItem x:Name="about" Header="关于" Click="About_Click" />
				</Menu>
				<Menu>
					<MenuItem x:Name="test" Header="测试" Click="Test_Click"/>
				</Menu>
			</WrapPanel>
		</Grid>
		<StackPanel HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="100">
			<Label Content="项目列表" HorizontalAlignment="Center" />
			<ScrollViewer x:Name="proList" VerticalScrollBarVisibility="Auto">

			</ScrollViewer>
		</StackPanel>
		<Grid HorizontalAlignment="Left" Margin="177,25,0,0" VerticalAlignment="Top">
			<Frame x:Name="pageProject" Source="/MFCheck;component/Form/PageProjectInfo.xaml" />
		</Grid>
	</Grid>
</Window>
